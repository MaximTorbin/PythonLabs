{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "movies": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "year": {
            "type": "integer",
            "minimum": 1800,
            "maximum": 2025
          },
          "cast": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "role": { "type": "string" }
              },
              "required": ["name", "role"],
              "additionalProperties": false
            }
          }
        },
        "required": ["title", "year", "cast"],
        "additionalProperties": false
      }
    }
  },
  "required": ["movies"],
  "additionalProperties": false
}